<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TeamFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorTeam</item>
        <item name="android:textSize">@dimen/team_size</item>
        <item name="android:shadowColor">@color/colorTeamShadow</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:fontFamily">@font/team_font</item>
    </style>

    <style name="ScoreFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorScore</item>
        <item name="android:textSize">@dimen/score_size</item>
        <item name="android:fontFamily">@font/digital</item>
    </style>
</resources>